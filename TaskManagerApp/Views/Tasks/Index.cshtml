@{
    ViewData["Title"] = "Tasks";
}

@model List<ToDoTask>

<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <a class="btn btn-primary" asp-controller="Tasks" asp-action="Create">
                <i class="bi bi-bookmark-plus-fill"></i>
                Create new Task
            </a>
        </div>
        <div class="col-6 text-end">
            <h2>My Tasks</h2>
        </div>
    </div>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        @if (Model.Count == 0)
        {
            <tr>
                <td colspan="4" class="text-center text-muted">
                    No tasks yet
                </td>
            </tr>
        }
        else
        {
            foreach (var task in Model)
            {
                <tr>
                    <td>@task.Title</td>
                    <td>@task.Description</td>
                    <td>@task.Status</td>
                    <td>
                        <a asp-controller="" asp-action="" asp-route-id="" class="btn btn-primary btn-sm">
                            <i class="bi bi-pencil"></i>
                            Edit
                        </a>
                        <a asp-controller="" asp-action="" asp-route-id="" class="btn btn-danger btn-sm">
                            <i class="bi bi-trash"></i>
                            Delete
                        </a>
                        @{
                            if (task.Status == "Active")
                            {
                                <a asp-controller="" asp-action="" asp-route-id="" class="btn btn-success btn-sm">
                                    <i class="bi bi-trash"></i>
                                    Complete
                                </a>
                            }
                        }
                        
                    </td>
                </tr>
            }
        }
        </tbody>
    </table>
</div>