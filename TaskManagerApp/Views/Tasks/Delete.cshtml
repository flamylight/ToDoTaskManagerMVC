@model ToDoTask

<div class="container mt-4 ">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h2>Delete Task</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Delete" method="post">
                        <div class="form-group mb-3">
                            <label asp-for="Title" class="form-label">Title</label>
                            <input asp-for="Title" class="form form-control" placeholder="Enter a title" readonly/>
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Description" class="form-label">Description</label>
                            <input asp-for="Description" row="5" class="form form-control" placeholder="Enter what you want to do" readonly/>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-primary">Delete</button>
                            <a asp-controller="Tasks" asp-action="Index" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <partial name="_ValidationScriptsPartial"/>
}